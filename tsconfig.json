{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "jsx": "react-jsx",
    },
    "include": [
        "src",
        "global.d.ts",
    ],
    "exclude": [
        "node_modules",
        "plugins",
        "public"
    ],
}